<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="davenkin.opinions.domain.Survey" table="SURVEY" lazy="false">
        <id name="id" type="long">
            <column name="ID" />
            <generator class="increment" />
        </id>
        <property name="content" type="string">
            <column name="CONTENT" not-null="true"/>
        </property>

        <many-to-one
                name="creatingUser"
                class="davenkin.opinions.domain.User"
                fetch="select">
            <column name="USER_ID" not-null="true"/>
        </many-to-one>

        <property name="createdTime" type="timestamp" not-null="true">
            <column name="CREATED_TIME" not-null="true" />
        </property>

        <property name="canMultipleChecked" type="yes_no">
            <column name="CAN_MULTIPLE_CHECKED" not-null="true"/>
        </property>

        <property name="surveyCategory">
            <column name="CATEGORY" not-null="true"/>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">davenkin.opinions.domain.Category</param>
            </type>
        </property>

        <set name="surveyTags" table="SURVEY_TAG" cascade="delete-orphan">
            <key column="SURVEY_ID" />
            <element column="TAG" type="string" />
        </set>

        <bag name="options"
             inverse="true" lazy="false" fetch="select" cascade="all, delete-orphan">
            <key>
                <column name="SURVEY_ID" not-null="true" />
            </key>
            <one-to-many class="davenkin.opinions.domain.Option" />
        </bag>

        <bag name="comments"
             inverse="true" lazy="true" fetch="select" cascade="delete,delete-orphan" order-by="createdTime">
            <key>
                <column name="SURVEY_ID" not-null="true" />
            </key>
            <one-to-many class="davenkin.opinions.domain.Comment" />
        </bag>


    </class>
</hibernate-mapping>